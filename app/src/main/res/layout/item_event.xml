<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.05–16.05.2025"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/juwenalia" />

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juwenalia"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis wydarzenia"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/dateVotingInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Głosowanie na datę: TAK/NIE"
            android:textColor="#FFFFFF"
            android:layout_marginTop="6dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/locationVotingInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Głosowanie na lokalizację: TAK/NIE"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/readMoreBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Czytaj więcej"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <ImageView
                android:id="@+id/lockIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_lock"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
