<?xml version="1.0" encoding="utf-8"?>
<!-- Ekran czatu, ciemny motyw + belka nawigacji -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:fitsSystemWindows="true">

    <!-- Pasek nawigacji (ten sam co w innych widokach) -->
    <include
        android:id="@+id/chatToolbar"
        layout="@layout/custom_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Lista wiadomości -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/chatToolbar"
        app:layout_constraintBottom_toTopOf="@id/messageBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Pole wpisywania + przycisk WYŚLIJ -->
    <LinearLayout
        android:id="@+id/messageBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/background_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:hint="Napisz wiadomość…"
            android:background="@drawable/input_bg"
            android:textColor="@android:color/black"
            android:textColorHint="#80FFFFFF"
            android:paddingHorizontal="12dp"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:text="Wyślij"
            android:textColor="@color/text_white"
            android:backgroundTint="@color/button_purple"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
